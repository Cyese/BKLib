<div class="mt-4">
    <div>
      <h3>Danh sách biên nhận</h3>
    </div>

    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Tình trạng</th>
                <th scope="col">Ngày in biên nhận</th>
                <th scope="col">id thủ thư</th>
            </tr>
        </thead>
        <tbody>
            {{#each Receipts}}
            <tr>
                {{!-- <th scope="row">{{sum @index 1}}</th> --}}
                <td>{{this.id}}</td>
                <td>{{this.state}}</td>
                <td>{{this.date_exported}}</td>
                <td>{{this.id_librarian}}</td>
                {{!-- <td>
                  <a href="" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#delete_account_modal" data-id="{{this._id}}"> Xóa </a>
                </td> --}}
            </tr>
            {{else}}
            <tr>
              <td colspan="5" class="text-center">
                Chưa có biên nhận nào
              </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

